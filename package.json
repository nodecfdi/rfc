{
  "name": "@nodecfdi/rfc",
  "version": "1.3.2",
  "description": "Librer√≠a para trabajar con RFC (Mexicano)",
  "keywords": [
    "rfc",
    "mexican",
    "homoclave"
  ],
  "private": false,
  "author": "OcelotlStudio <contacto@ocelotlstudio.com>",
  "license": "MIT",
  "type": "module",
  "main": "./dist/rfc.umd.cjs",
  "module": "./dist/rfc.js",
  "unpkg": "./dist/rfc.umd.cjs",
  "browser": "./dist/rfc.umd.cjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/rfc.js",
      "require": "./dist/rfc.umd.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "prepare": "is-in-ci || husky",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "build": "rimraf dist && tsc && vite build",
    "gen:docs": "rimraf docs && typedoc --options typedoc.json",
    "release": "pnpm run build && pnpm changeset publish"
  },
  "repository": "https://github.com/nodecfdi/rfc",
  "bugs": {
    "url": "https://github.com/nodecfdi/rfc/issues"
  },
  "homepage": "https://github.com/nodecfdi/rfc",
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.2",
    "@eslint/eslintrc": "^3.0.2",
    "@types/luxon": "^3.4.2",
    "@types/node": "^20.11.20",
    "@vitest/coverage-istanbul": "^1.3.1",
    "eslint": "^8.57.0",
    "eslint-config-canonical": "^42.8.1",
    "eslint-define-config": "^2.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "is-in-ci": "^0.1.0",
    "jsdom": "^24.0.0",
    "luxon": "^3.4.4",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "typedoc": "^0.25.9",
    "typedoc-material-theme": "^1.0.2",
    "typescript": "^5.3.3",
    "vite": "^5.1.4",
    "vite-plugin-dts": "^3.7.3",
    "vite-tsconfig-paths": "^4.3.1",
    "vitest": "^1.3.1"
  },
  "peerDependencies": {
    "@types/luxon": "3.4.2",
    "luxon": "^3.4.4"
  },
  "peerDependenciesMeta": {
    "@types/luxon": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "browserslist": [
    "defaults",
    "not IE 11"
  ]
}
